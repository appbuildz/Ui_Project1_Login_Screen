<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_340sdp"
        android:layout_height="@dimen/_273sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image"
         />

    <TextView
        android:id="@+id/h1txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login or Sign Up"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/worksansmedium"
        android:textSize="@dimen/_23sdp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/userbox"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/h1txt"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/outline_box"
        android:hint="Username"
        android:textColorHint="@color/light_gray"
        android:fontFamily="@font/worksansmedium"
        android:paddingLeft="@dimen/_40sdp"
        android:inputType="text"
        />

    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/user_icon"
        android:layout_below="@id/h1txt"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        />

    <EditText
        android:id="@+id/pwdbox"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userbox"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/outline_box"
        android:hint="Password"
        android:textColorHint="@color/light_gray"
        android:fontFamily="@font/worksansmedium"
        android:paddingLeft="@dimen/_40sdp"
        android:inputType="textPassword"
        />

    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/pwd_icon"
        android:layout_below="@id/userbox"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginbtn"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/pwdbox"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textAllCaps="false"
        android:fontFamily="@font/worksansmedium"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        android:background="@drawable/btn_bg"
        android:elevation="@dimen/_2sdp"
        />

    <TextView
        android:id="@+id/acctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbtn"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:text="Don't have an account ?"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/worksansmedium"
        android:textSize="@dimen/_16sdp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupbtn"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/acctxt"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:fontFamily="@font/worksansmedium"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/black"
        android:elevation="@dimen/_2sdp"
        />

</RelativeLayout>